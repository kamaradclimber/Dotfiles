general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "battery 0"
order += "wireless wlan0"
order += "path_exists Criteo"
order += "volume master"
order += "tztime local"
order += "tztime utc"

wireless _first_ {
  format_up = "W: %essid, %bitrate"
  format_down = "no wifi"
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "🔋❌"
  status_chr = "⚡ CHR"
  status_bat = "🔋 BAT"
  status_unk = "? UNK"
  status_full = "☻ FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 30
}

path_exists Criteo {
  path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
    format = "%m-%d %H:%M:%S"
}

tztime utc {
  format = "%Z %H:%M"
  timezone = "Etc/UTC"
}

volume master {
  format = "🎶: %volume"
  format_muted = "🎶:🔇(%volume)"
}
