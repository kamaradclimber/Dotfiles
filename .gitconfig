[core]
    autocrlf = false
    safecrlf = false
    #from the man page : this can sped up operations like git diff and status on NFS with weak cahcing semantics...
    preloadindex = true
    hideDotFiles = dotGitOnly
    logallrefupdates = true
    #@todo : use the alias option which can provide alias. See man for more informations

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto

[diff]
    renames = true

[help]
    autocorrect = 3 #wait 0.3 seconds before excuting probable correction in case of mispell of commands

[alias]
    last = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
