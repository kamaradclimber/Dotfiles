[Repository gmail-remote]
type=Gmail
remoteuser = kamaradclimber@gmail.com
folderfilter = lambda foldername: foldername in ['INBOX','[Gmail]/Drafts', '[Gmail]/Trash']
nametrans = lambda foldername: re.sub('^\[Gmail\]', '', foldername)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete=no

[Repository gmail-local]
type = Maildir
localfolders = ~/Maildir/Gmail

[Account Gmail]
localrepository = gmail-local
remoterepository = gmail-remote
status_backend = sqlite

[general]
accounts = Gmail, familleseux
socktimeout = 90
fsync = false

[Repository familleseux-remote]
type = IMAP
remotehost = familleseux.net
remoteuser = grego
ssl = yes
sslcacertfile = /etc/ssl/certs/dovecot.pem

[Repository familleseux-local]
type = Maildir
localfolders = ~/Maildir/familleseux
sep = /

[Account familleseux]
localrepository = familleseux-local
remoterepository = familleseux-remote
status_backend = sqlite
