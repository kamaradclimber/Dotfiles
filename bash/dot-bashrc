test_helper() {
  binary=$1
  package_name=$2
  which $binary > /dev/null 2>&1
  res=$?
  if [[ "$res" -eq 0 ]]; then
    return 0
  else
    if [[ ! -z "$package_name" ]]; then
      echo "$binary is not present, install it using $package_name"
    fi
    return 1
  fi
}

